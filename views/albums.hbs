<h1>Albums for: {{albums.[0].artists.[0].name}}</h1>

<section class="section">

    {{#each albums}}

        <div class="element">

            <img src="{{this.images.[0].url}}"/>
            <P>{{this.name}}</P>
            <button><a href="/tracks/{{this.id}}">View Tracks</a></button>
    
        </div>

    {{/each}}

</section>